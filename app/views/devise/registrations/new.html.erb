<h2>Sign up</h2>
<em><p>* required</p></em>
<br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Name" %>
  </div>

  <div class="field">
    <%= f.text_area :address, autofocus: true, autocomplete: "address", placeholder: "Address", cols: '24', rows: '4' %>
  </div>

  <div class="field">
    <span><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email"%>*</span>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    
    <% end %><br />
    <span><%= f.password_field :password, autocomplete: "new-password", placeholder: "Password" %>*</span>
  </div>

  <div class="field">
    <span><%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password" %>*</span>
  </div>
    <p><em>(<%= @minimum_password_length %> characters minimum, 1 lowercase, 1 uppercase, and 1 number)</em></p>
  <br>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
