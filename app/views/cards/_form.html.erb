<%= form_with model: @card, local: true do |f| %>
    <div class="flex-start">
    <%= f.text_field :name, placeholder: "Name", :required => true %>
    </div>
    <br>
    <div class="flex-start">
    <%= f.number_field :price, in: 1.00..100000.00, step: 0.01, placeholder: "Price", :required => true %>
    </div>
    <br>
    <div class="flex-start">
    <%= f.number_field :qty, in: 1..1000000, placeholder: "Quantity", :required => true %>
    </div>
    <h2>Condition:</h2>
    <div class="flex-start">
    <%= f.radio_button :condition, "NM" %>
    <%= f.label :condition_nm, "Near mint" %>
    </div>
    <div class="flex-start">
    <%= f.radio_button :condition, "LP" %>
    <%= f.label :condition_lp, "Lightly played" %>
    </div>
    <div class="flex-start">
    <%= f.radio_button :condition, "MP" %>
    <%= f.label :condition_mp, "Moderately played" %>
    </div>
    <div class="flex-start">
    <%= f.radio_button :condition, "HP" %>
    <%= f.label :condition_hp, "Heavily played/Damaged" %>
    </div>
    <h2>Picture: </h2>
    <div class="flex-start">
    <%= f.file_field :card_image, :required => true %>
    </div>
    <br>


    <%= f.submit %>
<% end %>